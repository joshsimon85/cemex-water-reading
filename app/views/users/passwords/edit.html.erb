<%= content_for :title, 'Create A New Password' %>

<main>
  <%= link_to root_path, class: "d-inline-block", id: 'logo' do %>
    <h1>
      <%= image_tag 'cemex-logo.png' %>
    </h1>
  <% end %>
  <section class="mt-5 border rounded shadow mx-auto p-2 centered-form">
    <h2 class="text-center mb-3">Change Your Password</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render partial: 'shared/custom_errors',
            :locals => { :obj => resource, msg: 'password from being changed' } %>
      <%= f.hidden_field :reset_password_token %>
      <dl>
        <dt><%= f.label :password, "New password" %></dt>
        <dd class="mb-2">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'w-100' %>
        </dd>
        <dt><%= f.label :password_confirmation, "Confirm new password" %></dt>
        <dd class="mb-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-100' %>
        </dd>
      </dl>
      <div class="actions">
        <%= f.submit "Change my password", class: 'btn-outline-primary w-100 mb-2 rounded' %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </section>
</main>
